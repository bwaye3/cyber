{#
/**
 * @file
 *
 * Default product template.
 *
 * Available variables:
 * - attributes: HTML attributes for the wrapper.
 * - product: The rendered product fields.
 *   Use 'product' to print them all, or print a subset such as
 *   'product.title'. Use the following code to exclude the
 *   printing of a given field:
 *   @code
 *   {{ product|without('title') }}
 *   @endcode
 * - product_entity: The product entity.
 * - product_url: The product URL.
 *
 * @ingroup themeable
 */
#}
<div class="course-block">      
  <div class="course-block-inner">
    <div class="image gallery-popup">
      {{ product.field_course_images }}
      {% if video_link %}
        <a class="video-link popup-video" href="{{ video_link }}"><i class="fas fa-video"></i> {{'Preview'|t}}</a>
      {% endif %}
    </div>
    <div class="course-content">
      <div class="content-inner">
        <div class="categories clearfix">{{product.field_course_category}}</div>
        <h4 class="title"><a href="{{ product_url }}" rel="bookmark">{{ title }}</a></h4> 
        <div class="course-info">
          <div class="teacher clearfix">{{product.field_course_teacher}}</div>
          <div class="course-sumary d-none">{{product.body}}</div>
        </div>
      </div>  
      <div class="course-footer clearfix">
        <div class="left">
          <div class="course-price"><div class="course-price-inner">
            {% if price_display %}
              {{ price_display }}
            {% else %}  
              {{ product.variation_price }}
            {% endif %}  
          </div></div>
        </div>
        <div class="right"><a href="{{ product_url }}">{{ 'Apply now'|t }}</a></div>
      </div>  
    </div>
  </div>
</div>
        